<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.tunie.sf.module.story.domain.dao.StoryLevelDao">
    <select id="selectStoryLevelList" resultType="net.tunie.sf.module.story.domain.entity.StoryLevelEntity">
        select * from t_story_level
        <where>
            and story_id = #{storyId}
            <if test="disableFlag != null">
                and disable_flag = #{disableFlag}
            </if>
        </where>
        order by order;
    </select>
</mapper>